{
	"compileOnSave": false,
	"compilerOptions": {
		"strict": true,
		"plugins": [
			{
				"name": "@0no-co/graphqlsp",
				"schema": "http://localhost:8080/graphql",
				"tadaOutputLocation": "./graphql-env.ts"
			}
		],
		"rootDir": ".",
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"target": "es2015",
		"module": "esnext",
		"lib": [
			"es2020",
			"dom"
		],
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@nx-spoofy/backend-spoofy": [
				"apps/backend-spoofy/src/index.js"
			],
			"@nx-spoofy/lib": [
				"apps/lib/src/index.ts"
			],
		}
	},
	"exclude": [
		"node_modules",
		"tmp"
	]
}